
#print simple maths equations
print(2.987+3)
#modulus operator % spits out the remainer of
print(10 % 3)

#converts a number to a string:
my_num = 5
print(str(my_num)+ " is my favourite number")

#absolute values
my_num = -5
print(abs(my_num))

#powers 3 to the power of 2
print(pow(3, 2))

#max/min
print(min(4, 6))
print(max(4, 6))
print(round(4, 6))

from math import*
print (floor(3.7)) # rounds down
print (ceil(3.7)) # rounds up
print (sqrt(36)) # square root

