
phrase = "Cat School"
#convert the phrase to upper can and test if it is upper case
print(phrase.upper().isupper())
#measure the length of the string
print(len(phrase))
#print the first charater ofthe string
print(phrase[0])
#print the third charater ofthe string
print(phrase[2])
#print the charater position of the letter C - index function
print(phrase.index("C"))
#replace
print(phrase.replace("Cat", "Dog"))
